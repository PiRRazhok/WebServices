@model IEnumerable<WebApplication.Models.CarModel>

@{
    ViewBag.Title = "Add Car";
}

<h2>Choose Car</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <table class="table col-xs-12">
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Brand)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Series)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ReleaseYear)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DoorNum)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Color)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BodyType)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="radio" name="carId" value="@item.Id" required />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Brand)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Series)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ReleaseYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DoorNum)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Color)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BodyType)
                        </td>
                    </tr>
                }

            </table>
        </div>

        @*<input type="text" value="@ViewBag.dealerId" class="hidden" />*@

        <div class="form-group">
            <div class="col-md-12">
                <div class="row">
                    <input type="submit" value="Add" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to Dealer's Cars", "ListCars")
</div>
